{
  "Serilog": {
    "ElasticSearchUrl": "http://localhost:9200",
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "Microsoft.AspNetCore": "Warning",
        "System": "Warning"
      }
    }
  },
  "PostgresOptions": {
    "ConnectionString": "Server=localhost;Port=5432;Database=catalogs;User Id=postgres;Password=;Include Error Detail=true",
    "UseInMemory": false
  },
  "SieveOptions": {
    "DefaultPageSize": 10,
    "MaxPageSize": 10
  },

  "CacheOptions": {
    "ExpirationTimeInMinute": 5
  },
  "CorsOptions": {
    "AllowedUrls": [
      "http://localhost:4200"
    ]
  },
  "CatalogsApiClientOptions": {
    "BaseAddress": ""
  },
  "RikAndMortyApiClientOptions": {
    "BaseAddress": "https://rickandmortyapi.com",
    "CharacterEndpoint": "api/character"
  },
  "PolicyOptions": {
    "BulkheadPolicyOptions": {
      "MaxParallelization": 10,
      "MaxQueuingActions": 5
    },
    "CircuitBreakerPolicyOptions": {
      "DurationOfBreak": 30,
      "ExceptionsAllowedBeforeBreaking": 12
    },
    "RetryPolicyOptions": {
      "Count": 3,
      "BackoffPower": 2
    },
    "TimeoutPolicyOptions": {
      "TimeoutInSeconds": 30
    }
  }
}
